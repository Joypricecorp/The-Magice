<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="magice_uikit.twig.extension.class.icon">Magice\Bundle\UikitBundle\Twig\Icon</parameter>
		<parameter key="magice_uikit.twig.extension.class.label">Magice\Bundle\UikitBundle\Twig\Label</parameter>
		<parameter key="magice_uikit.twig.extension.class.badge">Magice\Bundle\UikitBundle\Twig\Badge</parameter>
		<parameter key="magice_uikit.twig.extension.class.form">Magice\Bundle\UikitBundle\Twig\Form</parameter>
	</parameters>

	<services>

		<service id="magice_uikit.twig.extension.icon" class="%magice_uikit.twig.extension.class.icon%">
			<tag name="twig.extension"/>
		</service>

		<service id="magice_uikit.twig.extension.label" class="%magice_uikit.twig.extension..class.label%">
			<tag name="twig.extension"/>
		</service>

		<service id="magice_uikit.twig.extension.badge" class="%magice_uikit.twig.extension.class.badge%">
			<tag name="twig.extension"/>
		</service>

		<service id="magice_uikit.twig.extension.form" class="%magice_uikit.twig.extension.class.form%">
			<tag name="twig.extension"/>
		</service>

	</services>
</container>
