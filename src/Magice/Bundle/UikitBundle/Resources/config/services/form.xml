<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="magice_uikit.form.type.class.collection">Magice\Bundle\UikitBundle\Form\Type\Collection</parameter>
        <parameter key="magice_uikit.form.type.class.money">Magice\Bundle\UikitBundle\Form\Type\Money</parameter>
        <parameter key="magice_uikit.form.type.class.form_actions">Magice\Bundle\UikitBundle\Form\Type\FormActions</parameter>
        <parameter key="magice_uikit.form.extension.class.typesetter">Magice\Bundle\UikitBundle\Form\Extension\TypeSetter</parameter>
    </parameters>

    <services>
        <service id="magice_uikit.form.type.collection" class="%magice_uikit.form.type.class.collection%">
            <tag name="form.type" alias="uk_collection" />
        </service>

        <service id="magice_uikit.form.type.money" class="%magice_uikit.form.type.class.money%">
            <tag name="form.type" alias="money" />
        </service>

        <service id="magice_uikit.form.type.form_actions" class="%magice_uikit.form.type.class.form_actions%">
            <tag name="form.type" alias="form_actions" />
        </service>

        <service id="magice_uikit.form.extension.typesetter" class="%magice_uikit.form.extension.class.typesetter%">
            <tag name="form.type.extension" alias="form" />
        </service>

    </services>
</container>
