<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jp_asset.form.validator.phone.class">Magice\Validator\Constraints\PhoneValidator</parameter>
        <parameter key="jp_asset.form.validator.zipcode.class">Magice\Validator\Constraints\ZipCodeValidator</parameter>
    </parameters>

    <services>
        <service id="jp_asset.form.validator.phone" class="%jp_asset.form.validator.phone.class%">
	        <tag name="validator.constraint_validator" alias="Phone"/>
        </service>
	    <service id="jp_asset.form.validator.zipcode" class="%jp_asset.form.validator.zipcode.class%">
		    <tag name="validator.constraint_validator" alias="ZipCode"/>
	    </service>
    </services>
</container>
